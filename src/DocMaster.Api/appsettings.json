{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=docmaster;Username=docmaster;Password=docmaster"
  },
  "ErasureCoding": {
    "DataShards": 6,
    "ParityShards": 3,
    "ChunkSizeBytes": 10485760,
    "SmallObjectThreshold": 65536,
    "MaxFileSizeBytes": 1073741824
  },
  "NodeHealth": {
    "PollIntervalSeconds": 10,
    "MaxConsecutiveFailures": 3
  },
  "Upload": {
    "MaxNodeAttempts": 3,
    "GrpcTimeoutSeconds": 30
  },
  "MimeDetection": {
    "RejectDangerousMismatches": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
